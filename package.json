{
  "name": "dart-build-runner-watch",
  "displayName": "Dart build_runner watch",
  "description": "VSCode extension to run 'dart run build_runner watch' for Dart projects.",
  "version": "1.3.0",
  "publisher": "ChargerDevs",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ChargerMc/build_runner_vscodeextension.git"
  },
  "bugs": {
    "url": "https://github.com/ChargerMc/build_runner_vscodeextension/issues"
  },
  "homepage": "https://github.com/ChargerMc/build_runner_vscodeextension#readme",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleWatch",
        "title": "Toggle Build Runner Watch"
      },
      {
        "command": "extension.buildSelected",
        "title": "%extension.command.buildSelected%"
      },
      {
        "command": "extension.buildRunnerClean",
        "title": "%extension.command.cleanBuildRunner%"
      },
      {
        "command": "extension.watch.start",
        "title": "%extension.command.startWatch%"
      },
      {
        "command": "extension.watch.stop",
        "title": "%extension.command.stopWatch%"
      },
      {
        "command": "extension.watch.startInline",
        "title": "%extension.command.startWatch%",
        "icon": "$(eye)"
      },
      {
        "command": "extension.watch.stopInline",
        "title": "%extension.command.stopWatch%",
        "icon": "$(eye-closed)"
      },
      {
        "command": "extension.buildRunnerCleanInline",
        "title": "%extension.command.cleanBuildRunner%",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "extension.toggleWatch",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus && resourceLangId == 'dart'"
      },
      {
        "command": "extension.buildSelected",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "editorTextFocus && resourceLangId == 'dart'"
      },
      {
        "command": "extension.buildRunnerClean",
        "key": "ctrl+alt+shift+b",
        "mac": "cmd+alt+shift+b",
        "when": "editorTextFocus && resourceLangId == 'dart'"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "buildRunnerExplorer",
          "name": "%extension.views.buildRunnerExplorer%",
          "icon": "icon.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "buildRunnerExplorer",
        "contents": "%extension.views.buildRunnerExplorer.welcome%",
        "when": "!buildRunnerExplorer.hasFolders"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.buildSelected",
          "when": "resourceLangId == 'dart'",
          "group": "navigation@10"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.buildSelected",
          "when": "resourceExtname == '.dart' && resourceScheme == 'file'",
          "group": "2_code@20"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.watch.startInline",
          "when": "false"
        },
        {
          "command": "extension.watch.stopInline",
          "when": "false"
        },
        {
          "command": "extension.buildRunnerCleanInline",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.watch.startInline",
          "when": "view == buildRunnerExplorer && viewItem == buildRunnerFolderIdle",
          "group": "inline@1",
          "tooltip": "%extension.command.startWatch%"
        },
        {
          "command": "extension.watch.stopInline",
          "when": "view == buildRunnerExplorer && viewItem == buildRunnerFolderWatching",
          "group": "inline@1",
          "tooltip": "%extension.command.stopWatch%"
        },
        {
          "command": "extension.buildRunnerCleanInline",
          "when": "view == buildRunnerExplorer && viewItem == buildRunnerFolderIdle",
          "group": "inline@2",
          "tooltip": "%extension.command.cleanBuildRunner%"
        },
        {
          "command": "extension.buildRunnerCleanInline",
          "when": "view == buildRunnerExplorer && viewItem == buildRunnerFolderWatching",
          "group": "inline@2",
          "tooltip": "%extension.command.cleanBuildRunner%"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "tree-kill": "^1.2.2",
    "vscode-nls": "^5.2.0"
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "localization": {
    "default": "i18n/package.nls.json",
    "es": "i18n/package.nls.es.json"
  }
}
